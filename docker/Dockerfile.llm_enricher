FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy shared modules
COPY shared/ ./shared/

# Copy llm_enricher service
COPY llm_enricher/ ./llm_enricher/

# Install dependencies
RUN pip install -r llm_enricher/requirements.txt

# Set Python path
ENV PYTHONPATH=/app

WORKDIR /app/llm_enricher

CMD ["python", "worker.py"]