FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy shared modules
COPY shared/ ./shared/

# Copy parser_deduper service
COPY parser_deduper/ ./parser_deduper/

# Install dependencies
RUN pip install -r parser_deduper/requirements.txt

# Set Python path
ENV PYTHONPATH=/app

WORKDIR /app/parser_deduper

CMD ["python", "worker.py"]